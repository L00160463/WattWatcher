@page "/Test-sms"
@inject SmsService SmsService
<h3>Test SMS Sending</h3>
<button class="btn btn-primary" @onclick="SendTestSms">Send Test SMS</button>

@code {
    private async Task SendTestSms()
    {
        try
        {
            SmsService.SendSms("+353871146998", "Warning! Your electricity usage is at 90% of your set limit for this month. Consider reducing usage to avoid extra charges.");

        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error sending SMS: {ex.Message}");
        }

        // This line is added to satisfy the compiler warning
        await Task.CompletedTask;
    }
}
